<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nsystem.materialmotion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="false">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".containertransform.ContainerTransformActivity"/>

        <activity android:name=".containertransform.ContainerTransformedActivity"/>

        <activity android:name=".sharedaxis.SharedAxisActivity"/>

        <activity android:name=".sharedaxis.SharedAxisYTransformedActivity"/>

        <activity android:name=".BottomSheetActivity"/>
    </application>

</manifest>