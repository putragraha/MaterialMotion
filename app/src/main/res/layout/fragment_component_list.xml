<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_component_transform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/component_transform"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mb_to_activity"
        style="@style/MaterialButton.Outlined.CustomIconed"
        android:layout_marginTop="6dp"
        android:text="@string/to_activity"
        app:icon="@drawable/ic_arrow_start"
        app:layout_constraintTop_toBottomOf="@id/actv_component_transform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>